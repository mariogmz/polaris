<div class="well">
<h2 class="center">Registrate a Polaris!</h2><br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="center">
	  <%= f.email_field :email, autofocus: true, placeholder: "Correo electrónico" %>
  </div>

  <div class="center">
	  <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
  </div>

  <div class="center">
	  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar contraseña" %>
  </div>

  <div class="center"><%= f.submit "Registrate!", class: "btn btn-success btn-large" %></div>
<% end %>
</div>