<div class="well">
	<h2 class="center">Iniciar sesión</h2>
	<br/><br/>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
	  
	  <div class="well well-large">
	  	  <div class="control-group">
	  		  <%= f.label "Correo electrónico", class: "control-label", for: "inputEmail" %>
	  		  <div class="controls">
	  			  <%= f.email_field :email, autofocus: true, id: "inputEmail", placeholder: "Correo electrónico" %>
	  		  </div>
	  	  </div>

	  	  <div class="control-group">
	  		  <%= f.label "Contraseña", class: "control-label", for: "inputPassword" %>
	  		  <div class="controls">
	  			  <%= f.password_field :password, autocomplete: "off", id: "inputPassword", placeholder: "Contraseña" %>
	  		  </div>
	  	  </div>

	  	  <% if devise_mapping.rememberable? -%>
	  	    <div class="control-group">
	  			<%= f.label "Recordarme", class: "control-label", for: "checkboxRemember" %>
	  			<div class="controls">
	  				<%= f.check_box :remember_me, id: "checkboxRemember" %> 
	  			</div>
	  		</div>
	  	  <% end -%>

	  	  <div class="center"><%= f.submit "Iniciar sesión", class: "btn btn-primary btn-large"%></div>
	  	<% end %>
		<br/><br/><hr>
	  	<%= render "devise/shared/links" %>
	  </div>
</div>