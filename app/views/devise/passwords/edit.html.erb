<div class="well">
<h2 class="center">Cambiar mi contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="center">
	  <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nueva contrase単a" %>
  </div>

  <div class="center">
	  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirma tu contrase単a" %>
  </div>

  <div class="center"><%= f.submit "Cambiar mi contrase単a", class: "btn btn-info" %></div>
<% end %>
</div>